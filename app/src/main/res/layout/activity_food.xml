<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodActivity">

    <Button
            android:text="@string/save"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSalvar"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imgFoto"
            app:layout_constraintVertical_bias="0.793"/>
    <EditText
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtRestaurante"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="4dp"
            android:importantForAutofill="no"/>
    <EditText
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtDescricao"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" android:layout_marginRight="4dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/rbNota" android:importantForAutofill="no"/>
    <TextView
            android:text="@string/restaurant"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:id="@+id/textView" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/edtRestaurante" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.444"/>
    <TextView
            android:text="@string/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/rbNota" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="@string/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toStartOf="@+id/edtDescricao"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.666"/>
    <RatingBar
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:id="@+id/rbNota"
            app:layout_constraintTop_toBottomOf="@+id/edtRestaurante" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" android:layout_marginRight="64dp" android:layout_marginTop="24dp"/>
    <TextView
            android:text="@string/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edt" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"/>
    <TextView
            android:text="@string/num_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintEnd_toStartOf="@+id/edtNumEnd"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/edtDescricao"/>
    <EditText
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtEndereco" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/edtDescricao" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toStartOf="@+id/textView5" android:layout_marginRight="32dp"
            android:importantForAutofill="no"/>
    <EditText
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtNumEnd" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" android:layout_marginRight="4dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/edtDescricao" android:importantForAutofill="no"/>
    <ImageView
            android:layout_width="355dp"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imgFoto"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/edtTelefone" android:contentDescription="TODO"
            android:background="@mipmap/ic_launcher_round"/>
    <TextView
            android:text="@string/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/edt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/edtTelefone" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.555"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtTelefone" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/edtEndereco" android:layout_marginEnd="96dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="96dp"
            android:importantForAutofill="no"/>
    <Button
            android:text="@string/add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnImagem"
            app:layout_constraintTop_toTopOf="@+id/imgFoto" app:layout_constraintBottom_toBottomOf="@+id/imgFoto"
            app:layout_constraintEnd_toEndOf="@+id/imgFoto"
            app:layout_constraintStart_toStartOf="@+id/imgFoto"/>
</android.support.constraint.ConstraintLayout>