<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_list_food"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_list_food">

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flbAdicionar"
            android:clickable="true"
            android:backgroundTint="@color/button_save"
            android:src="@drawable/ic_plus"
            android:layout_alignRight="@+id/rvFoods" android:layout_marginRight="10dp" android:layout_marginEnd="10dp"
            android:layout_alignEnd="@+id/rvFoods" android:layout_alignParentBottom="true"
            android:layout_marginBottom="9dp"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvFoods"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
